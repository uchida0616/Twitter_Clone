<div class="container">
  <div class="center-block bg-primary text-center" style="width:400px">
    <h1>ツイート一覧<h1>
  </div>
  <div class="alert alert-info alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span></button>
    <strong><%= notice %></strong>
  </div>
    </div>
    <table>
      <tr>
        <th>投稿内容</th>
      </tr>
      <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.content %></td>
        <td><%= link_to '詳細を確認する', tweet_path(tweet.id) %></td>
        <td><%= link_to "ツイートを編集する", edit_tweet_path(tweet.id) %></td>
        <td><%= link_to 'ツイートを削除する', tweet_path(tweet.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }%></td>
      </tr>
      <% end %>
    </table>
  <br>
  <button class="btn btn-default">
    <%= link_to '新しくツイートする', new_tweet_path %>
  </button>
</div>
